{
  "competency": "systems_thinking",
  "name": "Systems Thinking",
  "definition": "The competence to apply fundamental concepts of systems thinking in systems engineering and to understand the role of one's own system in its overall context",
  "levels": {
    "1": {
      "bloom_taxonomy": "remember",
      "standard_objective": "Define systems thinking principles and identify system boundaries in given scenarios",
      "customization_variables": ["industry_domain", "system_types", "organizational_context"],
      "time_estimate_hours": 8
    },
    "2": {
      "bloom_taxonomy": "understand", 
      "standard_objective": "Explain the relationship between system structure and behavior, and analyze emergent properties",
      "customization_variables": ["company_systems", "stakeholder_context", "business_domain"],
      "time_estimate_hours": 16
    },
    "3": {
      "bloom_taxonomy": "apply",
      "standard_objective": "Apply systems thinking tools and methodologies to model system interactions and feedback mechanisms", 
      "customization_variables": ["modeling_tools", "system_context", "process_integration"],
      "time_estimate_hours": 32
    },
    "4": {
      "bloom_taxonomy": "analyze",
      "standard_objective": "Analyze complex system behaviors and design effective interventions using systems thinking approaches",
      "customization_variables": ["analysis_methods", "intervention_types", "complexity_level"],
      "time_estimate_hours": 48
    }
  },
  "industry_adaptations": {
    "automotive": {
      "context": "Vehicle systems and ADAS development",
      "examples": ["Multi-ECU interactions", "Safety system dependencies", "V2X system integration"],
      "tools": ["AUTOSAR architecture", "Functional safety analysis"]
    },
    "aerospace": {
      "context": "Aircraft and space systems",
      "examples": ["Mission-critical system interactions", "Fault-tolerant architectures"], 
      "tools": ["MBSE tools", "System-of-systems modeling"]
    },
    "medical_devices": {
      "context": "Healthcare technology systems",
      "examples": ["Patient safety systems", "Regulatory compliance systems"],
      "tools": ["Risk management tools", "Clinical workflow modeling"]
    }
  }
}