// maturity_assessment.json
{
  "questionnaire_id": "maturity_assessment",
  "name": "SE Maturity Assessment - BRETZ Model",
  "description": "Comprehensive assessment of organizational SE maturity across 4 design areas",
  "phase": "phase1_analysis",
  "estimated_time_minutes": 10,
  "sections": [
    {
      "id": "fundamentals",
      "name": "Fundamentals",
      "section_weight": 0.25,
      "questions": [
        {
          "id": "MAT_01",
          "text": "How would you describe the prevalence of systems thinking and SE mindset in your organization?",
          "type": "single_choice",
          "required": true,
          "weight": 0.35,
          "options": [
            {"value": 0, "label": "Not available", "description": "No SE awareness or systems thinking present"},
            {"value": 1, "label": "Individual", "description": "Few individuals have SE mindset from external experience"},
            {"value": 2, "label": "Fragmented", "description": "Pockets of SE thinking in specific teams"},
            {"value": 3, "label": "Established", "description": "SE mindset widely understood and practiced"},
            {"value": 4, "label": "Optimized", "description": "SE culture continuously reinforced and evolving"}
          ]
        },
        {
          "id": "MAT_02",
          "text": "What is the state of your organization's SE knowledge management?",
          "type": "single_choice",
          "required": true,
          "weight": 0.30,
          "options": [
            {"value": 0, "label": "Not available", "description": "No documented SE knowledge"},
            {"value": 1, "label": "Ad hoc", "description": "Individual knowledge, not shared systematically"},
            {"value": 2, "label": "Fragmented", "description": "Some documented knowledge in silos"},
            {"value": 3, "label": "Established", "description": "Centralized, accessible SE knowledge base"},
            {"value": 4, "label": "Optimized", "description": "Continuously updated, comprehensive knowledge system"}
          ]
        },
        {
          "id": "MAT_03",
          "text": "How does your organization adapt SE practices to specific contexts?",
          "type": "single_choice",
          "required": true,
          "weight": 0.35,
          "options": [
            {"value": 0, "label": "Not available", "description": "No adaptation mechanisms"},
            {"value": 1, "label": "Ad hoc", "description": "Informal, individual adaptations"},
            {"value": 2, "label": "Simple logic", "description": "Basic selection criteria for different project types"},
            {"value": 3, "label": "Tailoring rules", "description": "Documented adaptation guidelines"},
            {"value": 4, "label": "Assisted", "description": "Tool-supported, data-driven tailoring"}
          ]
        }
      ]
    },
    {
      "id": "organization",
      "name": "Organization",
      "section_weight": 0.30,
      "questions": [
        {
          "id": "MAT_04",
          "text": "To what extent are SE roles and processes defined and implemented?",
          "type": "single_choice",
          "required": true,
          "weight": 0.35,
          "routing_critical": true,
          "options": [
            {"value": 0, "label": "Not available", "description": "No SE roles or processes defined"},
            {"value": 1, "label": "Ad hoc/undefined", "description": "Informal, inconsistent application"},
            {"value": 2, "label": "Individually controlled", "description": "Basic processes, roles emerging"},
            {"value": 3, "label": "Defined and established", "description": "Clear roles, documented processes"},
            {"value": 4, "label": "Quantitatively predictable", "description": "Measured and controlled processes"},
            {"value": 5, "label": "Optimized", "description": "Continuously improved based on metrics"}
          ]
        },
        {
          "id": "MAT_05",
          "text": "What is the current reach of SE implementation in your organization?",
          "type": "single_choice",
          "required": true,
          "weight": 0.30,
          "routing_critical": true,
          "options": [
            {"value": 0, "label": "Not available", "description": "SE not used"},
            {"value": 1, "label": "Individual area", "description": "Single team or department"},
            {"value": 2, "label": "Development area", "description": "Engineering/development departments"},
            {"value": 3, "label": "Company-wide", "description": "Entire organization"},
            {"value": 4, "label": "Value chain", "description": "Extended to suppliers/partners"}
          ]
        },
        {
          "id": "MAT_06",
          "text": "How structured is your SE training and qualification approach?",
          "type": "single_choice",
          "required": true,
          "weight": 0.20,
          "options": [
            {"value": 0, "label": "Not available", "description": "No training concept"},
            {"value": 1, "label": "Ad hoc", "description": "Occasional, unplanned training"},
            {"value": 2, "label": "Fragmented", "description": "Some structured programs, not comprehensive"},
            {"value": 3, "label": "Established", "description": "Systematic training program"},
            {"value": 4, "label": "Optimized", "description": "Adaptive, personalized learning paths"}
          ]
        },
        {
          "id": "MAT_07",
          "text": "How well-defined is the SE organizational structure?",
          "type": "single_choice",
          "required": true,
          "weight": 0.15,
          "options": [
            {"value": 0, "label": "Not available", "description": "No SE organizational elements"},
            {"value": 1, "label": "Responsible defined", "description": "SE contact persons identified"},
            {"value": 2, "label": "Positions filled", "description": "Dedicated SE roles staffed"},
            {"value": 3, "label": "Support available", "description": "SE support functions established"},
            {"value": 4, "label": "Service available", "description": "Full SE service organization"}
          ]
        }
      ]
    },
    {
      "id": "process_capability",
      "name": "Process Capability",
      "section_weight": 0.25,
      "questions": [
        {
          "id": "MAT_08",
          "text": "What is the maturity of your requirements engineering processes?",
          "type": "single_choice",
          "required": true,
          "weight": 0.35,
          "options": [
            {"value": 0, "label": "Not performed", "description": "No systematic requirements management"},
            {"value": 1, "label": "Performed", "description": "Basic requirements captured"},
            {"value": 2, "label": "Managed", "description": "Requirements tracked and controlled"},
            {"value": 3, "label": "Established", "description": "Defined process with standards"},
            {"value": 4, "label": "Predictable", "description": "Quantitatively managed"},
            {"value": 5, "label": "Optimizing", "description": "Continuous improvement"}
          ]
        },
        {
          "id": "MAT_09",
          "text": "How mature is your system architecture development?",
          "type": "single_choice",
          "required": true,
          "weight": 0.35,
          "options": [
            {"value": 0, "label": "Not performed", "description": "No systematic architecture approach"},
            {"value": 1, "label": "Performed", "description": "Basic architecture documentation"},
            {"value": 2, "label": "Managed", "description": "Architecture reviews and governance"},
            {"value": 3, "label": "Established", "description": "Standard architecture framework"},
            {"value": 4, "label": "Predictable", "description": "Architecture metrics and analysis"},
            {"value": 5, "label": "Optimizing", "description": "Model-based architecture optimization"}
          ]
        },
        {
          "id": "MAT_10",
          "text": "What is the maturity of verification and validation processes?",
          "type": "single_choice",
          "required": true,
          "weight": 0.30,
          "options": [
            {"value": 0, "label": "Not performed", "description": "No systematic V&V"},
            {"value": 1, "label": "Performed", "description": "Basic testing conducted"},
            {"value": 2, "label": "Managed", "description": "Test planning and tracking"},
            {"value": 3, "label": "Established", "description": "Comprehensive V&V standards"},
            {"value": 4, "label": "Predictable", "description": "V&V metrics and prediction"},
            {"value": 5, "label": "Optimizing", "description": "Risk-based, optimized V&V"}
          ]
        }
      ]
    },
    {
      "id": "infrastructure",
      "name": "Infrastructure",
      "section_weight": 0.20,
      "questions": [
        {
          "id": "MAT_11",
          "text": "How integrated are your SE tools and platforms?",
          "type": "single_choice",
          "required": true,
          "weight": 0.50,
          "options": [
            {"value": 0, "label": "Not available", "description": "No SE tools or standalone only"},
            {"value": 1, "label": "Single tool links", "description": "Some point-to-point integrations"},
            {"value": 2, "label": "Bidirectional sync", "description": "Key tools exchange data"},
            {"value": 3, "label": "Cluster coupling", "description": "Process-area tool integration"},
            {"value": 4, "label": "Complete integration", "description": "Full tool chain integration"}
          ]
        },
        {
          "id": "MAT_12",
          "text": "To what extent is Model-Based Systems Engineering used?",
          "type": "single_choice",
          "required": true,
          "weight": 0.50,
          "options": [
            {"value": 0, "label": "Not available", "description": "No model usage"},
            {"value": 1, "label": "Ad hoc", "description": "Sporadic model use by individuals"},
            {"value": 2, "label": "Basic decisions", "description": "Models inform some decisions"},
            {"value": 3, "label": "Established", "description": "Systematic MBSE methodology"},
            {"value": 4, "label": "Comprehensive", "description": "Comprehensive and optimized MBSE"}
          ]
        }
      ]
    }
  ],
  "scoring": {
    "method": "hierarchical_weighted_average",
    "section_calculations": {
      "fundamentals": "Σ(MAT_01-03 × weights) / Σ(weights)",
      "organization": "Σ(MAT_04-07 × weights) / Σ(weights)",
      "process_capability": "Σ(MAT_08-10 × weights) / Σ(weights)",
      "infrastructure": "Σ(MAT_11-12 × weights) / Σ(weights)"
    },
    "overall_calculation": "Σ(section_scores × section_weights) / Σ(section_weights)",
    "maturity_levels": {
      "initial": [0.0, 1.0],
      "developing": [1.0, 2.0],
      "defined": [2.0, 3.0],
      "managed": [3.0, 4.0],
      "optimized": [4.0, 5.0]
    },
    "routing_variables": {
      "process_maturity": "MAT_04",
      "rollout_scope": "MAT_05"
    }
  }
}

// archetype_selection.json
{
  "questionnaire_id": "archetype_selection",
  "name": "Qualification Archetype Selection",
  "description": "Dual-path decision tree for selecting appropriate SE qualification strategies",
  "phase": "phase1_analysis",
  "estimated_time_minutes": 5,
  "routing_logic": {
    "entry_condition": "Based on MAT_04 from maturity assessment",
    "paths": {
      "low_maturity": {
        "condition": "MAT_04 <= 1",
        "type": "dual_selection",
        "primary": "SE for Managers (automatic)",
        "secondary": "Based on ARCH_01"
      },
      "high_maturity": {
        "condition": "MAT_04 > 1",
        "type": "single_selection",
        "selection": "Based on MAT_05"
      }
    }
  },
  "questions": {
    "low_maturity_path": [
      {
        "id": "ARCH_01",
        "text": "Since SE processes and roles are not yet established, which approach does your company prefer for SE introduction?",
        "type": "single_choice",
        "required": true,
        "weight": 1.0,
        "decisive": true,
        "options": [
          {
            "value": "apply_pilot",
            "label": "Apply SE in pilot project",
            "description": "We want to test SE in a real project",
            "maps_to": "Orientation in Pilot Project"
          },
          {
            "value": "build_awareness",
            "label": "Build basic understanding",
            "description": "We need foundational SE awareness first",
            "maps_to": "Common Basic Understanding"
          },
          {
            "value": "develop_experts",
            "label": "Develop SE experts",
            "description": "We want certified SE specialists",
            "maps_to": "Certification"
          }
        ]
      },
      {
        "id": "ARCH_02",
        "text": "How prepared is your management team for SE introduction?",
        "type": "single_choice",
        "required": true,
        "weight": 0.30,
        "options": [
          {"value": 1, "label": "Need significant convincing"},
          {"value": 2, "label": "Somewhat interested"},
          {"value": 3, "label": "Actively supportive"},
          {"value": 4, "label": "Championing the initiative"}
        ]
      },
      {
        "id": "ARCH_03",
        "text": "Do you have a suitable pilot project for SE application?",
        "type": "single_choice",
        "required": false,
        "weight": 0.25,
        "conditional": {
          "show_if": {"ARCH_01": "apply_pilot"}
        },
        "options": [
          {"value": 1, "label": "Need to identify one"},
          {"value": 2, "label": "Potential candidates exist"},
          {"value": 3, "label": "Project selected and ready"},
          {"value": 4, "label": "Multiple projects available"}
        ]
      }
    ],
    "high_maturity_path": [
      {
        "id": "ARCH_04",
        "text": "SE Application Breadth",
        "type": "auto_calculated",
        "source": "MAT_05",
        "logic": {
          "if_MAT_05_le_1": "Needs-based Project-oriented Training",
          "if_MAT_05_ge_2": "Continuous Support"
        }
      },
      {
        "id": "ARCH_05",
        "text": "What is your preferred approach for ongoing SE development?",
        "type": "single_choice",
        "required": true,
        "weight": 0.40,
        "options": [
          {"value": "project_specific", "label": "Project-specific intensive training"},
          {"value": "continuous", "label": "Continuous coaching and support"},
          {"value": "self_directed", "label": "Self-directed with expert consultation"},
          {"value": "blended", "label": "Blended approach"}
        ]
      }
    ],
    "common_questions": [
      {
        "id": "ARCH_06",
        "text": "How many employees need SE qualification?",
        "type": "single_choice",
        "required": true,
        "weight": 0.35,
        "options": [
          {"value": "small", "label": "1-5", "description": "Individual or small team"},
          {"value": "medium", "label": "6-15", "description": "Department or large team"},
          {"value": "large", "label": "16-50", "description": "Multiple departments"},
          {"value": "enterprise", "label": "50+", "description": "Organization-wide"}
        ]
      },
      {
        "id": "ARCH_07",
        "text": "What is your implementation timeline requirement?",
        "type": "single_choice",
        "required": true,
        "weight": 0.35,
        "options": [
          {"value": "immediate", "label": "1-3 months", "description": "Urgent implementation"},
          {"value": "short", "label": "3-6 months", "description": "Short-term"},
          {"value": "medium", "label": "6-12 months", "description": "Medium-term"},
          {"value": "long", "label": "12+ months", "description": "Long-term strategic"}
        ]
      }
    ]
  },
  "decision_tree": {
    "archetypes": [
      {
        "id": "se_for_managers",
        "name": "SE for Managers",
        "description": "Executive-level SE understanding and change management",
        "selection_rules": {
          "automatic_if": "MAT_04 <= 1",
          "role": "primary"
        }
      },
      {
        "id": "orientation_pilot_project",
        "name": "Orientation in Pilot Project",
        "description": "Learn SE through practical pilot project application",
        "selection_rules": {
          "condition": "MAT_04 <= 1 AND ARCH_01 = 'apply_pilot'",
          "role": "secondary"
        }
      },
      {
        "id": "common_basic_understanding",
        "name": "Common Basic Understanding",
        "description": "Create shared SE awareness across stakeholders",
        "selection_rules": {
          "condition": "MAT_04 <= 1 AND ARCH_01 = 'build_awareness'",
          "role": "secondary"
        }
      },
      {
        "id": "certification",
        "name": "Certification",
        "description": "Formal SE certification and competency validation",
        "selection_rules": {
          "condition": "MAT_04 <= 1 AND ARCH_01 = 'develop_experts'",
          "role": "secondary"
        }
      },
      {
        "id": "needs_based_training",
        "name": "Needs-based Project-oriented Training",
        "description": "Role-specific training for project contexts",
        "selection_rules": {
          "condition": "MAT_04 > 1 AND MAT_05 <= 1",
          "role": "single"
        }
      },
      {
        "id": "continuous_support",
        "name": "Continuous Support",
        "description": "Ongoing coaching and improvement support",
        "selection_rules": {
          "condition": "MAT_04 > 1 AND MAT_05 >= 2",
          "role": "single"
        }
      },
      {
        "id": "train_the_trainer",
        "name": "Train the Trainer",
        "description": "Develop internal SE training capabilities",
        "selection_rules": {
          "evaluation": "supplementary",
          "suggested_if": "ARCH_06 = 'enterprise' OR ARCH_07 = 'long'"
        }
      }
    ]
  },
  "validation_rules": {
    "dual_selection": {
      "verify": "If MAT_04 <= 1, then exactly 2 archetypes selected",
      "primary_must_be": "SE for Managers",
      "secondary_from": ["Orientation in Pilot Project", "Common Basic Understanding", "Certification"]
    },
    "single_selection": {
      "verify": "If MAT_04 > 1, then exactly 1 archetype selected",
      "options": ["Needs-based Project-oriented Training", "Continuous Support"]
    }
  }
}