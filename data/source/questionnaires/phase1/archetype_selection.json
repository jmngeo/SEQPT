{
  "questionnaire_id": "archetype_selection",
  "name": "Qualification Archetype Selection", 
  "description": "Select appropriate qualification strategy using decision tree",
  "phase": "phase1_prepare_training",
  "estimated_time_minutes": 10,
  "questions": [
    {
      "id": "arch_001",
      "text": "Are SE processes and roles already established in your organization?",
      "type": "single_choice",
      "required": true,
      "weight": 0.25,
      "options": [
        {"value": "no", "label": "No established processes/roles", "decision_weight": 0},
        {"value": "partial", "label": "Partially established", "decision_weight": 0.5},
        {"value": "yes", "label": "Well-established processes/roles", "decision_weight": 1}
      ]
    },
    {
      "id": "arch_002",
      "text": "Is SE currently applied broadly across the organization?",
      "type": "single_choice",
      "required": true,
      "weight": 0.20,
      "conditional": {
        "show_if": {"arch_001": ["partial", "yes"]}
      },
      "options": [
        {"value": "no", "label": "Limited or no SE application", "decision_weight": 0},
        {"value": "some", "label": "Applied in some areas", "decision_weight": 0.5},
        {"value": "broad", "label": "Broadly applied", "decision_weight": 1}
      ]
    },
    {
      "id": "arch_003",
      "text": "What is the expected scope of SE rollout?",
      "type": "single_choice",
      "required": true,
      "weight": 0.18,
      "options": [
        {"value": "pilot", "label": "Pilot project/limited scope", "decision_weight": 0},
        {"value": "department", "label": "Department-wide rollout", "decision_weight": 0.5},
        {"value": "organization", "label": "Organization-wide rollout", "decision_weight": 1}
      ]
    }
  ],
  "decision_tree": {
    "archetypes": [
      {
        "id": "common_basic_understanding",
        "name": "Common Basic Understanding",
        "description": "Create shared SE awareness across stakeholders",
        "conditions": {
          "arch_001": "no",
          "arch_003": "pilot"
        }
      },
      {
        "id": "se_for_managers", 
        "name": "SE for Managers",
        "description": "Executive-level SE understanding and change management",
        "conditions": {
          "arch_001": "no",
          "management_focus": true
        }
      },
      {
        "id": "orientation_pilot_project",
        "name": "Orientation in Pilot Project", 
        "description": "Learn SE through practical pilot project application",
        "conditions": {
          "arch_001": ["no", "partial"],
          "arch_003": "pilot"
        }
      },
      {
        "id": "project_oriented_training",
        "name": "Project-oriented Training",
        "description": "Role-specific training for project contexts",
        "conditions": {
          "arch_001": "yes",
          "arch_002": ["no", "some"]
        }
      },
      {
        "id": "continuous_support",
        "name": "Continuous Support",
        "description": "Ongoing coaching and improvement support", 
        "conditions": {
          "arch_001": "yes",
          "arch_002": "broad",
          "arch_003": ["department", "organization"]
        }
      },
      {
        "id": "train_the_trainer",
        "name": "Train the Trainer",
        "description": "Develop internal SE training capabilities",
        "conditions": {
          "arch_001": "yes",
          "arch_002": "broad",
          "arch_003": "organization"
        }
      },
      {
        "id": "certification",
        "name": "Certification",
        "description": "Formal SE certification and competency validation",
        "conditions": {
          "certification_goal": true,
          "arch_001": "yes"
        }
      }
    ]
  }
}